source "$HOME"/my-files/my-scripts/colors.sh
if [ -f "init.tf" ]; 
then
    echo "init.tf exists. Not overwriting"
else

    echo "writing init.tf"
printf '


terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 4.50"
    }
  }
}

provider "aws" {
  profile = "default"
  region  = "us-east-1"
}

# localstack
