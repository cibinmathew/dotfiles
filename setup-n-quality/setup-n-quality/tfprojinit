#     lambda   = "http://localhost:4566"
#     iam  = "http://localhost:4566"
#   }
# }
' > init.tf

fi
# ---------------------------
if [ -f "variables.tf" ]; 
then
    echo "variables.tf exists. Not overwriting"
else
    echo "writing variables.tf"

printf '
variable "name" {
    default = ""
}
' > variables.tf
fi
touch main.tf

